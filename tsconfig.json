{
  "compilerOptions": {
    "lib": ["es2015", "es2016", "es2017", "es5", "dom"],
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types"],
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src",
    "./test"
  ]
}
